<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.boardver3.user.UserMapper">
<insert id="insUser">
    insert t_user
    set uid=#{uid}
    ,upw=#{upw}
    ,nm=#{nm}
    ,gender=#{gender}
    ,addr=#{addr}
</insert>
    <select id="selUser" resultType="UserSelVo"><!-- resultType은 보여주는거-->
        select
        uid,upw
        from t_user
        where uid=#{uid} and upw=#{upw}
    </select>

    <update id="repUser">
        update t_user
        set upw=#{npw}
        ,updated_at=now()
        where uid=#{uid} and upw=#{upw}
    </update>
</mapper>