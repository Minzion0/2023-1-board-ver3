<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.boardver3.user.UserMapper">
<insert id="insUser">
    insert t_user
    set uid=#{uid}
    ,upw=#{upw}
    ,nm=#{nm}
    ,gender=#{gender}
    ,addr=#{addr}
</insert>
    <select id="selUserById" resultType="UserLoginVo"><!-- resultType은 보여주는거-->
        select
        iuser,uid,upw,nm,gender,addr,main_pic mainPic
        from t_user
        where uid= #{uid}
    </select>

    <update id="repUser">
        update t_user
        set upw=#{npw}
        ,updated_at=now()
        where iuser = #{iuser}
    </update>
    <update id="updUserPic">
        update t_user
        set main_pic=#{mainPic}
        ,updated_at=now()
        where iuser=#{iuser}
    </update>
    <delete id="userDel">
        delete
        from t_user
        where iuser=#{iuser}
    </delete>

</mapper>